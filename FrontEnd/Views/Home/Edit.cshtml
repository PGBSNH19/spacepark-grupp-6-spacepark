@model SpaceparkWebApp.Controllers.HomeController

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="mb-3">
        <h1>Traveller Name: @Model.Traveller.Name</h1>
    </div>
    <div class="mt-3">
        <h3>Spaceships List</h3>
        <table class="table table-striped table-bordered">

            <tr class="table-bordered warning">
                <th>
                    @Html.DisplayNameFor(model => model.Spaceships.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Spaceships.FirstOrDefault().Length)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Spaceships.FirstOrDefault().Parking)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Traveller.Spaceships)
            {
                var parkspot = Model.GetParking(item.Id);

                if (parkspot != null && parkspot.Result != null)
                {
                    item.Parking = parkspot.Result.Id.ToString();
                }
                else
                {
                    item.Parking = "Has no park!";
                }

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Parking)
                    </td>
                    <td>
                        @if (parkspot.Result == null)
                        {
                            @Html.ActionLink("Park", "Park", new { id = item.Id, name = Model.Name })
                        }
                        else
                        {
                            @Html.ActionLink("Unpark", "Unpark", new { id = item.Id, name = Model.Name })
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>