@model SpaceparkWebApp.Models.Traveller

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="mb-3">
        <h1>Traveller Name: @Model.Name</div>
    </div>
    <div class="alert-dark">
        <p class="p-2">
            @Html.ActionLink("Create New", "Create", new { name = Model.Name })
        </p>
    </div>
    <div>
        <h3>Spaceships List</h3>
        <table class="table table-striped table-bordered">

            <tr class="table-bordered warning">
                <th>
                    @Html.DisplayNameFor(model => model.Spaceships.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Spaceships.FirstOrDefault().Length)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Spaceships)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { name = Model.Name }) |
                        @Html.ActionLink("Delete", "Delete", new { name = Model.Name })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
